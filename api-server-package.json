  "dependencies": {
    "express": "^5.1.0",
    "cors": "^2.8.5", 
    "dotenv": "^17.2.2",
    "drizzle-orm": "^0.44.5",
    "drizzle-zod": "^0.5.1",
    "postgres": "^3.4.7",
    "@supabase/supabase-js": "^2.57.4",
    "zod": "^3.23.8",
    "openai": "^4.20.1",
    "jsonwebtoken": "^9.0.2",
    "pokenode-ts": "^1.20.0",
    "@types/node": "^20.10.0"
  },
  "engines": {
    "node": ">=18.0.0" 
  },
  "type": "module"
}