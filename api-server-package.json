{
  "name": "pokepages-api-server", 
  "version": "1.0.0",
  "description": "PokePages API Server for production deployment",
  "main": "api-server.js",
  "scripts": {
    "start": "node api-server.js",
    "start:trace": "node --trace-warnings api-server.js",
    "dev": "node api-server.js",
    "restart": "npm run restart:win || npm run restart:unix",
    "restart:win": "start-api-server.bat",
    "restart:unix": "bash ./start-api-server.sh"
